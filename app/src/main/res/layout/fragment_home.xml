<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">

    <Button
        android:id="@+id/testButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="298dp"
        android:onClick="onButtonTap"
        android:text="Start Trip" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp">

    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/testButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="-111dp"
        android:ems="10"
        android:inputType="number"
        android:text="12.8"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/testButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="434dp"
        android:layout_marginEnd="-114dp"
        android:ems="10"
        android:inputType="number"
        android:text="10.7"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="82dp"
        android:text="Starting Voltage"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="82dp"
        android:text="Starting Voltage"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="447dp"
        android:text="Ending Voltage"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="130dp"
        android:text="X Accel"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="193dp"
        android:text="Y Accel"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="245dp"
        android:text="Z Accel"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/xAccel"
        android:layout_width="92dp"
        android:layout_height="38dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-38dp"
        android:layout_marginEnd="42dp"
        android:text="x:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/yAccel"
        android:layout_width="89dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="6dp"
        android:textSize="18sp"
        tools:text="y: " />

    <TextView
        android:id="@+id/zAccel"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="47dp"
        android:text="z: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/currentSpeed"
        android:layout_width="139dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="152dp"
        android:text="Speed"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_toEndOf="@+id/testButton"
        android:text=" m/s"
        android:textSize="18sp" />


</RelativeLayout>